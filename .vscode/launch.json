    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker: Attach to Node",
            "type": "node",
            "request": "attach",
            "port": 8001,
            "address": "localhost",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/usr/src/app",
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Remote Debug",
            "processId": "${command:PickProcess}",
            "restart": true,
            "protocol": "inspector",
            "port": 8001
        }
    ]
}